for_platform :ios do
    app_identifier(ENV["IOS_APP_ID"])
  
    apple_dev_portal_id(ENV["APPLE_DEVELOPER_EMAIL"])
    itunes_connect_id(ENV["APPLE_CONNECT_EMAIL"])
  
    team_id(ENV["APPLE_TEAM_ID"])
    itc_team_id(ENV["APPLE_TEAM_ID"])
end

